{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "_": true
  },
  "ecmaFeatures": {
    "modules": true,
    "experimentalObjectRestSpread": true
  },
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "rules": {
    "eqeqeq": [
      2,
      "always"
    ],
    "indent": [
      2,
      4
    ],
    "key-spacing": [
      "error",
      {
        "align": {
          "beforeColon": false,
          "afterColon": true,
          "on": "colon"
        },
        "multiLine": {}
      }
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "log",
          "warn",
          "error"
        ]
      }
    ],
    "no-debugger": 2,
    "no-extend-native": 0,
    "no-var": 1,
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      2,
      "always"
    ]
  }
}